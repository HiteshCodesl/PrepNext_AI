generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(cuid())
  name       String?
  email      String      @unique
  interviews Interview[]
  clerkId    String      @unique
  resumes    Resume[]
}

model Interview {
  id         String   @id @default(cuid())
  sessionId  String   @unique @default(uuid())
  techstack  String[]
  questions  String[]
  coverImage String
  role       String
  type       String
  level      String
  createdAt  DateTime @default(now())
  feedback   Json?
  finalized  Boolean
  userId     String
  user       User     @relation(fields: [userId], references: [id])
}

model Resume {
  id             String  @id @default(cuid())
  company        String
  jobTitle       String
  jobDescription String
  image          String
  userId         String
  user           User    @relation(fields: [userId],references: [id])
  feedback       Json[]
}
